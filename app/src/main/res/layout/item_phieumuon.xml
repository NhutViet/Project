<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">





    <LinearLayout
        android:background="#92C5ED"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtMaphieumuon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Values"
                android:textSize="16sp"
                android:layout_marginRight="20dp"
                />
            <TextView
                android:id="@+id/txtmaTV"
                android:layout_width="match_parent"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:text="Values"
                />
        </LinearLayout>




            <TextView
                android:id="@+id/txtTenTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Values"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtTenDangnhap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Values"
                android:textSize="16sp"
                android:layout_marginRight="20dp"
                />

            <TextView
                android:id="@+id/txtMaSach"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Values"
                />

        </LinearLayout>


            <TextView
                android:id="@+id/txtTenSach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Values"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:id="@+id/txtNgay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Values"
                />



<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">
    <TextView
        android:id="@+id/txtTrangThai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Values"
        android:textSize="16sp"
        android:layout_marginRight="20dp"
        />

    <TextView
        android:id="@+id/txtTienThue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Values"

        />

</LinearLayout>



        <Button
            android:id="@+id/btnTraSach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#9D6FEF"
            android:text="Trả sách"/>
    </LinearLayout>




</androidx.cardview.widget.CardView>