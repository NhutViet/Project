<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:background="#E3F2FD"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="270dp"
            android:src="@drawable/book_stack"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E3F2FD"
            android:orientation="vertical"
            android:padding="16dp">



                <TextView
                    android:id="@+id/txtMaphieumuon"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Mã phiếu mượn:"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_marginEnd="8dp" />


                <TextView
                    android:id="@+id/txtMaSach"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã sách:"
                    android:textSize="16sp"
                    android:textColor="#000" />


            <TextView
                android:id="@+id/txtTenSach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên sách:"
                android:textSize="16sp"
                android:textColor="#000"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/txtNgay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ngày mượn:"
                android:textSize="16sp"
                android:textColor="#000"
                 />



                <TextView
                    android:id="@+id/txtTrangThai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trạng thái:"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="30dp" />

                <TextView
                    android:id="@+id/txtTienThue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiền thuê:"
                    android:layout_marginBottom="10dp"
                    android:textSize="16sp"
                    android:textColor="#000" />
            <Button
                android:id="@+id/btnTraSach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#9D6FEF"
                android:text="Trả sách"
                android:textColor="#FFF" />
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>
